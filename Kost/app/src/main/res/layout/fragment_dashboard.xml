<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.DashboardFragment">

    <LinearLayout
        android:id="@+id/actBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="42dp"
            android:layout_marginStart="16dp">
            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/bg_error"
                android:src="@drawable/jarvis"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvGreetUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/isNotLoggedid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:visibility="gone"
        android:padding="24dp"
        android:gravity="center">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/dashboard"
            android:scaleType="centerCrop"
            android:layout_marginBottom="32dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_not_allowed"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/masuk"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="16dp"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_arrow_forward"
            app:drawableTint="@color/colorPrimary" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/actBar"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/userKostInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header_bg"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/userKostInf"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_stroke"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/userKostImg"
                        android:layout_width="72dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_bed" />
                    <LinearLayout
                        android:layout_weight="6"
                        android:layout_marginStart="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/userNamaKost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/userKostWaktuBuka"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins"/>
                        <TextView
                            android:id="@+id/userKostTipe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/userNotOrdered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_stroke"
                    android:padding="16dp"
                    android:visibility="visible"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/message_to_order"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
            <!-- quote of the day -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="8dp"
                android:layout_margin="16dp"
                android:background="@color/trans">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/term_and_conditions"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins"
                    android:layout_margin="8dp"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/menuDashboard"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp">
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:background="@color/colorPrimary"
                        android:text="Pembayaran"
                        android:textAllCaps="false"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="26sp"
                        android:textColor="@color/white"
                        android:textAlignment="textStart"
                        android:drawableEnd="@drawable/ic_money_white"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp">
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:background="@color/colorPrimary"
                        android:text="Pesan"
                        android:textAllCaps="false"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="26sp"
                        android:textColor="@color/white"
                        android:textAlignment="textStart"
                        android:drawableEnd="@drawable/ic_money_white"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp">
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:background="@color/colorPrimary"
                        android:text="Catatan"
                        android:textAllCaps="false"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="26sp"
                        android:textColor="@color/white"
                        android:textAlignment="textStart"
                        android:drawableEnd="@drawable/ic_money_white"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp">
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:background="@color/colorPrimary"
                        android:text="Pengaturan"
                        android:textAllCaps="false"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="26sp"
                        android:textColor="@color/white"
                        android:textAlignment="textStart"
                        android:drawableEnd="@drawable/ic_money_white"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>