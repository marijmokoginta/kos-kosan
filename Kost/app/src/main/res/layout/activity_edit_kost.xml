<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".admin_dashboard.EditKost">

    <LinearLayout
        android:id="@+id/actBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_kost"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginStart="-32dp"/>
        <ImageButton
            android:id="@+id/btnSimpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-40dp"
            android:src="@drawable/ic_check"
            android:padding="8dp"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <!--  edit nama kost  -->
    <LinearLayout
        android:id="@+id/edNamaKost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/actBar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Nama Kost"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18sp"
            android:layout_margin="18dp"
            android:textAlignment="center"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:textColorHint="@color/light_gray"
            app:boxBackgroundMode="outline">
            <EditText
                android:id="@+id/etNamaKost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="nama kost"
                android:fontFamily="@font/poppins"
                android:textColor="@color/text_color"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!--  edit jam buka kost  -->
    <LinearLayout
        android:id="@+id/edJamBukaKost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/actBar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Jam Buka Kost"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18sp"
            android:layout_margin="18dp"
            android:textAlignment="center"/>
        <LinearLayout
            android:id="@+id/waktuWrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/namaKostWrap">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/waktuBukaKostWrap"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColorHint="@color/text_color"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/colorPrimary">
                <EditText
                    android:id="@+id/etWaktuBukaKost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/text_color"
                    android:hint="jam buka kost"
                    android:inputType="datetime" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/waktuTutupKostWrap"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_height="wrap_content"
                android:textColorHint="@color/text_color"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/colorPrimary">
                <EditText
                    android:id="@+id/etWaktuTutupKost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/text_color"
                    android:hint="jam tutup kost"
                    android:inputType="datetime" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>

    <!--  edit tipe kost  -->
    <LinearLayout
        android:id="@+id/edTipeKost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/actBar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Tipe Kost"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18sp"
            android:layout_margin="18dp"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginHorizontal="18dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/titleTipeKost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Tipe Kost :"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_semibold"/>
            <Spinner
                android:id="@+id/spTipeKost"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:backgroundTint="@color/white"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <!--  edit alamat kost  -->
    <LinearLayout
        android:id="@+id/edAlamatKost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/actBar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Alamat Kost"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18sp"
            android:layout_margin="18dp"
            android:textAlignment="center"/>
        <LinearLayout
            android:id="@+id/alamat1wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/titleAlamat">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/alamat1"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColorHint="@color/text_color"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/colorPrimary">
                <EditText
                    android:id="@+id/etJalan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/text_color"
                    android:hint="jalan"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/alamat2"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_height="wrap_content"
                android:textColorHint="@color/text_color"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/colorPrimary">
                <EditText
                    android:id="@+id/etNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/poppins"
                    android:hint="No"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/alamat2wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/alamat1wrap">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/alamat3"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColorHint="@color/text_color"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/colorPrimary">
                <EditText
                    android:id="@+id/etKelurahan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/text_color"
                    android:hint="desa/kelurahan"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/alamat4"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_height="wrap_content"
                android:textColorHint="@color/text_color"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/colorPrimary">
                <EditText
                    android:id="@+id/etKecamatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/text_color"
                    android:hint="kecamatan"
                    android:inputType="textPersonName" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/kabupatenWrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardUseCompatPadding="false"
            app:cardElevation="1dp"
            app:layout_constraintTop_toBottomOf="@+id/alamat2wrap">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/titleKabupaten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kabupaten/Kota :"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"/>
                <Spinner
                    android:id="@+id/spKabupaten"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:backgroundTint="@color/white"
                    android:layout_weight="1"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!--  edit harga kost  -->
    <LinearLayout
        android:id="@+id/edHargaKost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/actBar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit harga Kost"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18sp"
            android:layout_margin="18dp"
            android:textAlignment="center"/>
        <LinearLayout
            android:id="@+id/hargaWrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/v2"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/colorPrimary"
                android:gravity="center"
                android:textColorHint="@color/text_color"
                app:layout_constraintTop_toBottomOf="@+id/v2">
                <EditText
                    android:id="@+id/etHarga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/text_color"
                    android:hint="harga"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="/ Bulan"
                android:textColor="@color/text_color"
                android:layout_weight="2"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

    <!--  edit jumlah kamar kost  -->
    <LinearLayout
        android:id="@+id/edJumlahKamarKost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/actBar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Jumlah Kamar Kost"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18sp"
            android:layout_margin="18dp"
            android:textAlignment="center"/>
        <LinearLayout
            android:id="@+id/jumlahKamarWrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jumlah kamar tersedia :"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="16sp"
                android:textColor="@color/text_color"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/colorPrimary"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="4dp"
                android:textColorHint="@color/text_color"
                app:layout_constraintTop_toBottomOf="@+id/catatanTittle">
                <EditText
                    android:id="@+id/etJumlahKamar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="start|top"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/poppins"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>

    <!--  edit peraturan kost  -->
    <LinearLayout
        android:id="@+id/edPeraturanKost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/actBar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Peraturan Kost"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18sp"
            android:layout_margin="18dp"
            android:textAlignment="center"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/peraturanWrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/colorPrimary"
            android:hint="peraturan kost"
            android:textColorHint="@color/text_color"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/peraturanTittle">
            <EditText
                android:id="@+id/etPeraturanKost"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:ems="10"
                android:gravity="start|top"
                android:textColor="@color/text_color"
                android:fontFamily="@font/poppins"
                android:inputType="textMultiLine"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!--  edit catatan kost  -->
    <LinearLayout
        android:id="@+id/edCatatanKost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/actBar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Catatan Kost"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18sp"
            android:layout_margin="18dp"
            android:textAlignment="center"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/catatanWrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/colorPrimary"
            android:hint="catatan"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:textColorHint="@color/text_color"
            app:layout_constraintTop_toBottomOf="@+id/catatanTittle">
            <EditText
                android:id="@+id/etCatatanKost"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:textColor="@color/text_color"
                android:ems="10"
                android:gravity="start|top"
                android:fontFamily="@font/poppins"
                android:inputType="textMultiLine"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!--  edit fasilitas kost  -->
    <LinearLayout
        android:id="@+id/edFasilitasKost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/actBar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Fasilitas Kost"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="32sp"
            android:layout_margin="32dp"
            android:textAlignment="center"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>