<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="12dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/kostImage"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_house"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/namaKost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Kost"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tipeKost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tipe_kost"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/text_color"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/waktuBukaKost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waktu buka kost"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/text_color"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp.500000 / Bulan"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/colorPrimary"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lokasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jalan manggis"
                    android:fontFamily="@font/poppins"
                    android:drawableStart="@drawable/ic_location"
                    android:textColor="@color/text_color"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>